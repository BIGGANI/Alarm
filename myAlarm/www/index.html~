<button onclick="goto()">Change Color</button>
	

<ul>
<li ng-repeat="todo in todos">
<input ng-click="clearCompleted()" type="checkbox" ng-model="todo.done">
<span ng-class="{'done':'todo.done'}">{{todo.hours}}</span> : 
<span ng-class="{'done':'todo.done'}">{{todo.minutes}}</span>

