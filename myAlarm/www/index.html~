	<script type="text/javascript">
	
	function goto(){
	
	if(document.bgColor=="#3D003D")
	{
	
	
	
	document.bgColor="#993333";
	
	}
	
	else if(document.bgColor=="#993333"){
	
	
	
	document.bgColor="#FF8533";
	
	}
	
	else if(document.bgColor=="#FF8533"){
	
	
	
	document.bgColor="#3D003D";
	
	}
	
	
	
	
	}
	
	</script>
